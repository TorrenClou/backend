{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=torrenclo;Username=torrenclo_user;Password=your_password_here"
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Key": "CHANGE_THIS_TO_A_SECURE_KEY_AT_LEAST_32_CHARACTERS_LONG",
    "Issuer": "TorrenClou_API",
    "Audience": "TorrenClou_Client"
  },
  "Google": {
    "ClientId": "your_google_oauth_client_id.apps.googleusercontent.com"
  },
  "GoogleDrive": {
    "ClientId": "your_google_drive_client_id.apps.googleusercontent.com",
    "ClientSecret": "your_google_drive_client_secret",
    "RedirectUri": "http://localhost:5000/api/storage/gdrive/callback",
    "FrontendUrl": "http://localhost:3000",
    "Scopes": [
      "https://www.googleapis.com/auth/drive.file",
      "https://www.googleapis.com/auth/userinfo.email"
    ]
  },
  "Redis": {
    "ConnectionString": "localhost:6379",
    "JobChannel": "jobs:new"
  }
}
