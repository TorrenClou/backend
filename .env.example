# ============================================================
# TorreClou Backend — Environment Configuration
# ============================================================
# Copy this file to .env and customize the values below
# ============================================================

ASPNETCORE_ENVIRONMENT=Production

# -----------------------------------------------------------
# Database (PostgreSQL) — Port Mappings
# -----------------------------------------------------------
# POSTGRES_PORT is the EXTERNAL port (localhost:47300)
# The container always uses port 5432 internally
POSTGRES_DB=torrenclo
POSTGRES_USER=torrenclo_user
POSTGRES_PASSWORD=changeme
POSTGRES_PORT=47300

# -----------------------------------------------------------
# Redis — Port Mapping
# -----------------------------------------------------------
# REDIS_PORT is the EXTERNAL port (localhost:47400)
# The container always uses port 6379 internally
REDIS_PORT=47400

# -----------------------------------------------------------
# API — Port Mapping
# -----------------------------------------------------------
# API_PORT is the EXTERNAL port (localhost:47200)
# The container always uses port 8080 internally
API_PORT=47200
FRONTEND_URL=http://localhost:47100
APPLY_MIGRATIONS=true

# -----------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------
JWT_SECRET=your_jwt_secret_key_min_32_characters_long
JWT_ISSUER=TorrenClou_API
JWT_AUDIENCE=TorrenClou_Client

# -----------------------------------------------------------
# Admin Credentials (single-user auth)
# -----------------------------------------------------------
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=changeme
ADMIN_NAME=Admin

# -----------------------------------------------------------
# Workers
# -----------------------------------------------------------
HANGFIRE_WORKER_COUNT=10
TORRENT_DOWNLOAD_PATH=/app/downloads

# -----------------------------------------------------------
# Observability — Serilog / Loki
# -----------------------------------------------------------
OBSERVABILITY_LOKI_URL=http://loki:3100
OBSERVABILITY_LOKI_USERNAME=
OBSERVABILITY_LOKI_API_KEY=

# -----------------------------------------------------------
# Observability — OpenTelemetry
# -----------------------------------------------------------
OBSERVABILITY_OTLP_ENDPOINT=
OBSERVABILITY_OTLP_HEADERS=
OBSERVABILITY_ENABLE_PROMETHEUS=true
OBSERVABILITY_ENABLE_TRACING=true

# -----------------------------------------------------------
# Grafana Dashboard (local observability stack)
# -----------------------------------------------------------
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=changeme_please
