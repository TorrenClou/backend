# Application Configuration
ASPNETCORE_ENVIRONMENT=Production

# Database Configuration
POSTGRES_DB=torrenclo
POSTGRES_USER=torrenclo_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PORT=6379

# API Configuration
API_PORT=5000
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_min_32_characters_long
JWT_ISSUER=TorrenClo
JWT_AUDIENCE=TorrenCloAPI
JWT_EXPIRATION_HOURS=24

# Worker Configuration
MAX_CONCURRENT_JOBS=3
MAX_CONCURRENT_UPLOADS=2

# Google OAuth (for user login)
# Create OAuth credentials at https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_oauth_client_id_here

# Google Drive Configuration
# NOTE: Google Drive OAuth credentials are now configured per-user via the API
# Users will provide their own ClientId, ClientSecret, and RedirectUri through
# POST /api/storage/gdrive/configure endpoint
# See docs/GOOGLE_DRIVE_SETUP.md for detailed instructions on creating Google Cloud credentials
FRONTEND_URL=http://localhost:3000

# Observability - Grafana Dashboard
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=changeme_please

# SMTP Configuration (Optional - for email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@yourdomain.com
